<?xml version="1.0"?>
<sdf version="1.8">
    <model name='wheelchair'>
        <!--base frame of the wheelchair-->
        <link name="center">
            <pose relative_to="__model__">0 0 0.12925 0 0 0</pose>
        </link>

        <!--Chassis Link-->
        <link name='chassis'>
            <pose relative_to='center'>-0.175 0 0.1 0 0 0</pose>
            <inertial>
                <mass>20</mass>
                <inertia>
                    <ixx>0.4113</ixx>
                    <ixy>0</ixy>
                    <ixz>0</ixz>
                    <iyy>1.0042</iyy>
                    <iyz>0</iyz>
                    <izz>1.2821</izz>
                </inertia>
            </inertial>
            <visual name='visual'>
                <geometry>
                    <box>
                        <size>0.75 0.4547 0.2</size>
                    </box>
                </geometry>
                <material>
                    <ambient>0.0 0.0 1.0 1</ambient>
                    <diffuse>0.0 0.0 1.0 1</diffuse>
                    <specular>0.0 0.0 1.0 1</specular>
                </material>
            </visual>
            <collision name='collision'>
                <geometry>
                    <box>
                        <size>0.75 0.4547 0.2</size>
                    </box>
                </geometry>
            </collision>
            <sensor name="imu_sensor" type="imu">
                <always_on>1</always_on>
                <update_rate>10</update_rate>
                <visualize>false</visualize>
                <topic>imu</topic>
                <pose relative_to='center'>0 0 0 0 0 0</pose>
            </sensor>
        </link>


        <!--Left Wheel Link-->
        <link name='left_wheel'>
            <pose relative_to='center'>0 0.26985 0 -1.5707 0 0</pose>
            <inertial>
                <mass>1</mass>    
                <inertia>
                    <ixx>4.77847e-3</ixx>
                    <ixy>0</ixy>
                    <ixz>0</ixz>
                    <iyy>4.77847e-3</iyy>
                    <iyz>0</iyz>
                    <izz>8.35278e-3</izz>
                </inertia>
            </inertial>
            <visual name='visual'>
                <geometry>
                    <cylinder>
                        <radius>0.12925</radius>
                        <length>0.085</length>
                    </cylinder>
                </geometry>
                <material>
                    <ambient>1.0 0.0 0.0 1</ambient>
                    <diffuse>1.0 0.0 0.0 1</diffuse>
                    <specular>1.0 0.0 0.0 1</specular>
                </material>
            </visual>
            <collision name='collision'>
                <geometry>
                    <cylinder>
                        <radius>0.12925</radius>
                        <length>0.085</length>
                    </cylinder>
                </geometry>
            </collision>
        </link>

        <!--Right Wheel Link-->
        <link name='right_wheel'>
            <pose relative_to='center'>0 -0.26985 0 -1.5707 0 0</pose>
            <inertial>
                <mass>1</mass>    
                <inertia>
                    <ixx>4.77847e-3</ixx>
                    <ixy>0</ixy>
                    <ixz>0</ixz>
                    <iyy>4.77847e-3</iyy>
                    <iyz>0</iyz>
                    <izz>8.35278e-3</izz>
                </inertia>
            </inertial>
            <visual name='visual'>
                <geometry>
                    <cylinder>
                        <radius>0.12925</radius>
                        <length>0.085</length>
                    </cylinder>
                </geometry>
                <material>
                    <ambient>1.0 0.0 0.0 1</ambient>
                    <diffuse>1.0 0.0 0.0 1</diffuse>
                    <specular>1.0 0.0 0.0 1</specular>
                </material>
            </visual>
            <collision name='collision'>
                <geometry>
                    <cylinder>
                        <radius>0.12925</radius>
                        <length>0.085</length>
                    </cylinder>
                </geometry>
            </collision>
        </link>
    
        <!--Laser Link-->
        <link name="laser">
            <pose relative_to="center">-0.74 0 1.40575 0 0 0</pose>
            <visual name="visual">
                <geometry>
                    <cylinder>
                        <radius>0.0381</radius>
                        <length>0.0381</length>
                    </cylinder>
                </geometry>
                <material>
                    <ambient>1 1 1 1</ambient>
                    <diffuse>1 1 1 1</diffuse>
                    <specular>1 1 1 1</specular>
                </material>
            </visual>
            <collision name='collision'>
                <geometry>
                    <cylinder>
                        <radius>0.0381</radius>
                        <length>0.0381</length>
                    </cylinder>
                </geometry>
            </collision>
            <sensor name='lidar' type='gpu_lidar'>
                <pose>0 0 0 0 0 0</pose>
                <topic>lidar</topic>
                <ignition_frame_id>laser</ignition_frame_id>
                <update_rate>10</update_rate>
                <ray>
                    <scan>
                        <horizontal>
                            <samples>640</samples>
                            <resolution>1</resolution>
                            <min_angle>-3.141592654</min_angle>
                            <max_angle>3.141592654</max_angle>
                        </horizontal>
                        <vertical>
                            <samples>1</samples>
                            <resolution>0.01</resolution>
                            <min_angle>0</min_angle>
                            <max_angle>0</max_angle>
                        </vertical>
                    </scan>
                    <range>
                        <min>0.08</min>
                        <max>60.0</max>
                        <resolution>0.01</resolution>
                    </range>
                </ray>
                <always_on>1</always_on>
                <visualize>true</visualize>
            </sensor>
        </link>

        <!--Camera Link-->
        <link name="camera">
            <pose relative_to="laser">0 0 -0.075 0 0 0</pose>
            <visual name="visual">
                <geometry>
                    <box>
                        <size>0.0225 0.088 0.0225</size>
                    </box>
                </geometry>
                <material>
                    <ambient>1 1 1 1</ambient>
                    <diffuse>1 1 1 1</diffuse>
                    <specular>1 1 1 1</specular>
                </material>
            </visual>
            <collision name='collision'>
                <geometry>
                    <box>
                        <size>0.0225 0.088 0.0225</size>
                    </box>
                </geometry>
            </collision>
        </link>

        <!--Caster Wheel Link-->
        <link name='caster'>
            <pose relative_to='center'>-0.55 0 0 0 0 0</pose>
            <inertial>
                <mass>1</mass>    
                <inertia>
                    <ixx>0.016</ixx>
                    <ixy>0</ixy>
                    <ixz>0</ixz>
                    <iyy>0.016</iyy>
                    <iyz>0</iyz>
                    <izz>0.016</izz>
                </inertia>
            </inertial>
            <visual name='visual'>
                <geometry>
                    <sphere>
                        <radius>0.12925</radius>
                    </sphere>
                </geometry>
                <material>
                    <ambient>0.0 1.0 0.0 1</ambient>
                    <diffuse>0.0 1.0 0.0 1</diffuse>
                    <specular>0.0 1.0 0.0 1</specular>
                </material>
            </visual>
            <collision name='collision'>
                <geometry>
                    <sphere>
                        <radius>0.12925</radius>
                    </sphere>
                </geometry>
            </collision>
        </link>

        <joint name="center_chassis_joint" type="fixed">
            <pose relative_to="center">0 0 0 0 0 0</pose>
            <parent>center</parent>
            <child>chassis</child>
        </joint>

        <!-- Joint between chassis and the left wheel -->
        <joint name='left_wheel_joint' type='revolute'>
            <pose relative_to='left_wheel'>0 0 0 0 0 0</pose>
            <parent>center</parent>
            <child>left_wheel</child>
            <axis>
                <xyz expressed_in='left_wheel'>0 0 1</xyz>
                <limit>
                    <lower>-1.79769e+308</lower>    <!--negative infinity-->
                    <upper>1.79769e+308</upper>     <!--positive infinity-->
                </limit>
            </axis>
        </joint>

        <!-- Joint between chassis and the right wheel -->
        <joint name='right_wheel_joint' type='revolute'>
            <pose relative_to='right_wheel'>0 0 0 0 0 0</pose>
            <parent>center</parent>
            <child>right_wheel</child>
            <axis>
                <xyz expressed_in='right_wheel'>0 0 1</xyz>
                <limit>
                    <lower>-1.79769e+308</lower>    <!--negative infinity-->
                    <upper>1.79769e+308</upper>     <!--positive infinity-->
                </limit>
            </axis>
        </joint>

        <!--Joint between Chassis and Laser-->
        <joint name="laser_joint" type="fixed">
            <pose relative_to="laser"></pose>
            <parent>chassis</parent>
            <child>laser</child>
        </joint>

        <!--Joint between LiDar and Camera-->
        <joint name="camera_joint" type="fixed">
            <pose relative_to="camera"></pose>
            <parent>laser</parent>
            <child>camera</child>
        </joint>

        <!--Joint where the caster wheel attached to the chassis-->
        <joint name='caster_wheel' type='ball'>
            <parent>center</parent>
            <child>caster</child>
        </joint>

        <!--Plugin for driving the robot-->
        <plugin 
            filename='ignition-gazebo-diff-drive-system' 
            name='ignition::gazebo::systems::DiffDrive'>
            <left_joint>left_wheel_joint</left_joint>
            <right_joint>right_wheel_joint</right_joint>
            <wheel_separation>0.5397</wheel_separation>
            <wheel_radius>0.12925</wheel_radius>
            <odom_publish_frequency>10</odom_publish_frequency>
            <max_linear_acceleration>1</max_linear_acceleration>
            <min_linear_acceleration>-1</min_linear_acceleration>
            <max_angular_acceleration>2</max_angular_acceleration>
            <min_angular_acceleration>-2</min_angular_acceleration>
            <max_linear_velocity>0.5</max_linear_velocity>
            <min_linear_velocity>-0.5</min_linear_velocity>
            <max_angular_velocity>1</max_angular_velocity>
            <min_angular_velocity>-1</min_angular_velocity>
            <topic>cmd_vel</topic>
        </plugin>

        <!--Plugin for lidar-->
        <plugin
            filename="ignition-gazebo-sensors-system"
            name="ignition::gazebo::systems::Sensors">
            <render_engine>ogre2</render_engine>
        </plugin>

        <!--Plugin for imu sensor-->
        <plugin
            filename="ignition-gazebo-imu-system"
            name="ignition::gazebo::systems::Imu">
        </plugin>

        <plugin
            filename="ignition-gazebo-joint-state-publisher-system"
            name="ignition::gazebo::systems::JointStatePublisher">
        </plugin>

        <plugin
            filename="ignition-gazebo-pose-publisher-system"
            name="ignition::gazebo::systems::PosePublisher">
            <publish_link_pose>true</publish_link_pose>
            <use_pose_vector_msg>true</use_pose_vector_msg>
            <static_publisher>true</static_publisher>
            <static_update_frequency>1</static_update_frequency>
        </plugin>

        <plugin
            filename="ignition-gazebo-odometry-publisher-system"
            name="ignition::gazebo::systems::OdometryPublisher">
            <odom_frame>diff_drive/odom</odom_frame>
            <robot_base_frame>diff_drive</robot_base_frame>
        </plugin>

    </model>
</sdf>
